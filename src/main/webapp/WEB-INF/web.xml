        <servlet-name>DeleteDriversAndTruckFromOrderServlet</servlet-name>
        <url-pattern>/private/manager/RemoveDriversAndTruckFromOrder</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ChangeOrderStatusServlet</servlet-name>
        <servlet-class>ru.tsystems.javaschool.kuzmenkov.logiweb.servlets.ChangeOrderStatusServlet</servlet-class>
