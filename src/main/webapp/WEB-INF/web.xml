        <servlet-class>ru.tsystems.javaschool.kuzmenkov.logiweb.servlets.ManagerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ManagerServlet</servlet-name>
        <url-pattern>/private/manager</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteDriversAndTruckFromOrderServlet</servlet-name>
        <servlet-class>ru.tsystems.javaschool.kuzmenkov.logiweb.servlets.DeleteDriversAndTruckFromOrderServlet</servlet-class>
    </servlet>
