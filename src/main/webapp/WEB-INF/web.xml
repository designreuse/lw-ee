    <servlet>
        <servlet-name>StartShift</servlet-name>
        <servlet-class>ru.tsystems.javaschool.kuzmenkov.logiweb.servlets.StartShiftForDriverServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>StartShift</servlet-name>
        <url-pattern>/private/driver/StartShift</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>*.form</url-pattern>
    </servlet-mapping>

